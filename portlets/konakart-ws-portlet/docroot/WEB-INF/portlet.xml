<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	
	<portlet>
		<portlet-name>promotion</portlet-name>
		<display-name>Promotion</display-name>
		<portlet-class>com.liferay.konakart.PromotionPortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/promotion/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-jsp</name>
			<value>/html/promotion/configuration.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Promotion</title>
			<short-title>Promotion</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-public-render-parameter>
			searchKey
		</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>detail</portlet-name>
		<display-name>Detail</display-name>
		<portlet-class>
			com.liferay.konakart.DetailPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/detail/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-jsp</name>
			<value>/html/detail/configuration.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>Detail</title>
			<short-title>Detail</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-public-render-parameter>
			searchKey
		</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>search</portlet-name>
		<display-name>Search</display-name>
		<portlet-class>
			com.liferay.konakart.SearchPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/search/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-jsp</name>
			<value>/html/search/configuration.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Search</title>
			<short-title>SearchPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-public-render-parameter>
			searchKey
		</supported-public-render-parameter>
	</portlet>
	
	<public-render-parameter>
    	<identifier>searchKey</identifier>
    	<qname xmlns:x="http://www.liferay.com/public-render-parameters">x:searchKey</qname>
    </public-render-parameter>
</portlet-app>